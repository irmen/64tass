CC = i686-w64-mingw32-gcc
OBJ = 64tass.o opcodes.o misc.o avl.o my_getopt.o eval.o error.o section.o encoding.o ternary.o file.o
LANG = C
CFLAGS = -O2 -march=i586 -W -Wall -Wextra
LDFLAGS = -s
CFLAGS += $(LDFLAGS)

.SILENT:

64tass: $(OBJ)

64tass.o: 64tass.c opcodes.h misc.h libtree.h eval.h error.h section.h encoding.h file.h
avl.o: avl.c libtree.h
encoding.o: encoding.c encoding.h libtree.h error.h misc.h ternary.h
error.o: error.c error.h misc.h libtree.h
eval.o: eval.c eval.h misc.h libtree.h file.h error.h section.h encoding.h
file.o: file.c file.h libtree.h misc.h error.h
misc.o: misc.c libtree.h misc.h opcodes.h getopt.h my_getopt.h error.h section.h encoding.h file.h
my_getopt.o: my_getopt.c my_getopt.h
opcodes.o: opcodes.c opcodes.h
section.o: section.c section.h libtree.h misc.h error.h
ternary.o: ternary.c ternary.h misc.h libtree.h

.PHONY: clean

clean:
	rm -f $(OBJ) 64tass *~
